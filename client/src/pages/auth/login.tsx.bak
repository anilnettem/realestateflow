import React, { useState } from 'react';
import { useRouter } from 'next/router';
import { useAppDispatch } from '../../store/hooks';
import { login } from '../../store/authSlice';

export default function Login() {
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');
  const dispatch = useAppDispatch();
  const router = useRouter();

  const submit = async () => {
    const resAction: any = await dispatch(login({ email, password }));
    if (login.fulfilled.match(resAction)) {
      router.push('/leads');
    } else {
      alert(resAction.payload || 'Login failed');
    }
  };

  return (
    <div className="p-6">
      <h1 className="text-2xl mb-4">Login</h1>
      <input value={email} onChange={(e)=>setEmail(e.target.value)} placeholder="Email" className="border p-2 mb-2 block" />
      <input value={password} onChange={(e)=>setPassword(e.target.value)} placeholder="Password" type="password" className="border p-2 mb-2 block" />
      <button onClick={submit} className="bg-blue-600 text-white px-4 py-2 rounded">Login</button>
    </div>
  );
}
